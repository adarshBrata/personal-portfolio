---
import Layout from "../Layout/Layout.astro";
import Map from "../icons/map.svg"
import Phone from "../icons/phone.svg";
import Mail from "../icons/mail.svg"
---

<Layout>
    <div class={'-z-10 relative mx-2 font-medium px-6 md:px-16 lg:px-32'}>
        <div id="contact-header" class='text-2xl m-2 bg-gradient-to-r from-amber-400 via-amber-500 to-rose-500 bg-clip-text text-transparent font-bold'>
            {'< contact >'}
        </div>
        
        <div class="space-y-6 mt-8">
            <div id="phone-contact" class='w-4/5 pl-2 ml-4 text-md font-light tracking-wide leading-5 text-zinc-300 flex items-center group hover:text-amber-300 transition-colors duration-300'>
                <div class="p-3 bg-zinc-800/50 rounded-full border border-zinc-700/50 group-hover:border-amber-500/50 transition-all duration-300">
                    <Phone class="w-5 h-5" />
                </div>
                <span class="px-4 ml-2 font-medium"> 
                    <a href="tel:+91 99375 93463" class="hover:underline decoration-amber-300">
                        +91 99375 93463
                    </a> 
                </span>
            </div>
            
            <div id="email-contact" class='w-4/5 pl-2 ml-4 text-md font-light tracking-wide leading-5 text-zinc-300 flex items-center group hover:text-amber-300 transition-colors duration-300'>
                <div class="p-3 bg-zinc-800/50 rounded-full border border-zinc-700/50 group-hover:border-amber-500/50 transition-all duration-300">
                    <Mail class="w-5 h-5" />
                </div>
                <span class="px-4 ml-2 font-medium"> 
                    <a href="mailto:adarsh.brata@gmail.com" class="hover:underline decoration-amber-300">
                        adarsh.brata@gmail.com
                    </a> 
                </span>
            </div>
            
            <div id="location-contact" class='w-4/5 pl-2 ml-4 text-md font-light tracking-wide leading-5 text-zinc-300 flex items-center group hover:text-amber-300 transition-colors duration-300'>
                <div class="p-3 bg-zinc-800/50 rounded-full border border-zinc-700/50 group-hover:border-amber-500/50 transition-all duration-300">
                    <Map class="w-5 h-5" />
                </div>
                <span class="px-4 ml-2 font-medium"> 
                    Bengaluru, Karnataka, India 
                </span>
            </div>
        </div>
        
        <div id="contact-footer" class='text-2xl mt-8 m-2 bg-gradient-to-r from-amber-400 via-amber-500 to-rose-500 bg-clip-text text-transparent font-bold'>
            {'</ contact >'}
        </div>
        
        <div class="absolute -z-10 text-zinc-600/20 -left-1/5 sm:-left-[4rem] top-1/3 text-6xl sm:text-8xl md:text-9xl font-bold">
            Reach Out!
        </div>
    </div>
</Layout>

<script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    // Header animation
    gsap.fromTo('#contact-header', 
        { opacity: 0, x: -50 },
        { opacity: 1, x: 0, duration: 0.8, ease: "power3.out" }
    );

    // Contact items animation
    gsap.fromTo('#phone-contact', 
        { opacity: 0, x: -100 },
        { opacity: 1, x: 0, duration: 0.6, delay: 0.2, ease: "power3.out" }
    );

    gsap.fromTo('#email-contact', 
        { opacity: 0, x: -100 },
        { opacity: 1, x: 0, duration: 0.6, delay: 0.4, ease: "power3.out" }
    );

    gsap.fromTo('#location-contact', 
        { opacity: 0, x: -100 },
        { opacity: 1, x: 0, duration: 0.6, delay: 0.6, ease: "power3.out" }
    );

    // Footer animation
    gsap.fromTo('#contact-footer', 
        { opacity: 0, x: -50 },
        { opacity: 1, x: 0, duration: 0.8, delay: 0.8, ease: "power3.out" }
    );
</script>
</Layout>