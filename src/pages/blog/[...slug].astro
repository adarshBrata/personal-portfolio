    }
    
    .prose h2 {
        font-size: 2rem;
        background: linear-gradient(to right, #f59e0b, #fbbf24);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        border-bottom: 2px solid #374151;
        padding-bottom: 0.5rem;
    }
    
