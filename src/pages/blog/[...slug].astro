        text-align: left;
        border-bottom: 1px solid #374151;
    }
    
    .prose th {
        background-color: #111827;
        color: #fbbf24;
        font-weight: 600;
    }
    
    .prose td {
        color: #d1d5db;
    }
    
    .prose hr {
        border: none;
        height: 2px;
        background: linear-gradient(to right, transparent, #fbbf24, transparent);
        margin: 3rem 0;
    }
