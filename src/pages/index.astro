---
import '../style.css'
import Layout from "../Layout/Layout.astro";
import me from "../../public/me.png"
import {AboutMe} from "../Components/AboutMe";
---

<Layout>
    <div class="flex flex-col w-full min-h-screen">
        <div id="hero-section" class="mx-6 px-6 md:px-16 lg:px-32 md:my-0 lg:my-0 h-[160px] md:h-[200px] flex flex-1 items-center">
            <div class="text-4xl sm:text-5xl md:text-6xl tracking-wider leading-tight text-zinc-200 font-light">
                <span id="greeting" class="block">Namaskar</span>
                <span id="wave" class="inline-block text-6xl sm:text-7xl md:text-8xl ml-4">ðŸ‘‹</span>
                <span id="exclamation" class="text-amber-400">!</span>
            </div>
        </div>
        <div id="about-section" class="mt-0 md:mt-2">
            <AboutMe client:load />
        </div>
    </div>
</Layout>

<script>
    import { gsap } from 'gsap';

    // Hero section animations - reduced from 4 to 2 animations
    gsap.fromTo('#greeting', 
        { opacity: 0, x: -100 },
        { opacity: 1, x: 0, duration: 1, ease: "power3.out" }
    );

    gsap.fromTo('#wave', 
        { opacity: 0, scale: 0 },
        { 
            opacity: 1, 
            scale: 1, 
            duration: 0.8, 
            delay: 0.5, 
            ease: "backOut" 
        }
    );

    // Removed exclamation animation and wave loop animation

    // About section entrance
    gsap.fromTo('#about-section', 
        { opacity: 0, y: 30 },
        { opacity: 1, y: 0, duration: 0.8, delay: 0.8, ease: "power3.out" }
    );
</script>
</Layout>